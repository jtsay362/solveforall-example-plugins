<% var majorVersions =  ['5', '6', '7', '8'] %>
<% var selectedMajorVersion = settings.jdkMajorVersion || '7'; %>
<!doctype html>
<html>
  <head>
    <title>JDK Inline Docs Settings</title>
  </head>
  <body>
    <form class="form-horizontal" role="form">
      <div class="form-group">
        <label for="version_input" class="col-xs-2 control-label">JDK Version</label>
        <div class="col-xs-2">
          <select name="jdkMajorVersion" class="form-control">
            <% for (var i = 0; i < majorVersions.length; i++) { %>
                <option
                <% if (selectedMajorVersion === majorVersions[i]) { %>
                     selected="selected"
                <% } %>
                >
                <%= majorVersions[i] %>
                </option>
            <% } %>
          </select>
        </div>
      </div>
      <div class="form-group">
        <div class="col-xs-offset-2 col-xs-2">
          <button type="submit" class="btn btn-primary"><i class="fa fa-check"></i>&nbsp;Save</button>
        </div>
      </div>
    </form>
  </body>
</html>
