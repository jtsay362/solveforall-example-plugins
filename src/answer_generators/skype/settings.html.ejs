<%
const callTypeValues = ['audio', 'video', 'chat'];
const callTypeLabels = ['Audio call', 'Video call', 'Chat'];
selectedCallType = settings.callType || 'audio';
%>
<!doctype html>
<html>
  <head>
    <title>Skype Settings</title>
  </head>
  <body>
    <form class="form-horizontal" role="form">
      <div class="form-group">
        <label class="col-xs-4 control-label">Default Action</label>
        <div class="col-xs-4">
          <select name="callType" class="form-control">
            <% for (let i = 0; i < callTypeValues.length; i++) { %>

              <option value="<%= callTypeValues[i] %>"
               <% if (callTypeValues[i] === selectedCallType) { %>
                 selected
               <% } %>

              ><%= callTypeValues[i] %></option>
            <% } %>
          </select>
        </div>
      </div>

      <div class="form-group">
        <div class="col-xs-offset-4 col-xs-6">
          Note: you can override the default action by including <code>audio</code>, <code>video</code>,
          or <code>chat</code> in your answer query.
        </div>
      </div>
    </form>
  </body>
</html>
