<!doctype html>
<html>
  <head>
    <title>JSON Formatter Settings</title>
  </head>
  <body>
    <form class="form-horizontal" role="form">
      <div class="form-group">
        <label class="col-xs-2 control-label">Indentation Level</label>        
        <div class="col-xs-2">
          <input name="indentLevel" type="number"
           value="<%= settings.indentLevel || '2' %>" class="form-control" min="0" max="10">        
        </div>        
      </div>    

      <div class="form-group">
        <div class="col-xs-offset-2 col-xs-2">
          <button type="submit" class="btn btn-primary">
            <i class="fa fa-check"></i>&nbsp;Save
          </button>
        </div>          
      </div>      
    </form>
  </body>
</html>
