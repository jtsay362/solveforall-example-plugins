<%
const categoryLabels = ['Apps', 'Music', 'Books', 'Movies', 'Newspapers', 'Devices'];
const categoryValues = ['apps', 'music', 'books', 'movies', 'newsstand', 'devices'];
const selectedCategory = settings.category || 'apps';

const priceTypeLabels = ['Any', 'Free', 'Paid'];
const priceTypeValues = ['', '1', '2'];
const selectedPriceType = settings.priceType || '';
%>

<!doctype html>
<html>
  <head>
    <title>Google Play Search Settings</title>
  </head>
  <body>
    <form class="form-horizontal">
      <div class="form-group">
        <label for="input_category" class="col-xs-4 control-label">Category</label>
        <div class="col-xs-4">
          <select id="input_category" name="category" class="form-control">
            <% for (let i = 0; i < categoryValues.length; i++) { %>
              <option value="<%= categoryValues[i] %>"
                <% if (categoryValues[i] === selectedCategory) { %>
                  selected
                <% } %>
              ><%= categoryLabels[i] %></option>
            <% } %>
          </select>
        </div>
      </div>

      <div class="form-group">
        <label for="input_price_type" class="col-xs-4 control-label">Price Type</label>
        <div class="col-xs-4">
          <select id="input_price_type" name="priceType" class="form-control">
            <% for (let i = 0; i < priceTypeValues.length; i++) { %>
              <option value="<%= priceTypeValues[i] %>"
                <% if (priceTypeValues[i] === selectedPriceType) { %>
                  selected
                <% } %>
              ><%= priceTypeLabels[i] %></option>
            <% } %>
          </select>
        </div>
      </div>
    </form>
  </body>
</html>
