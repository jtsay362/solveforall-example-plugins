<% var versions =  ['2.5.1', '2.6.1', '2.7.7', '2.8.2', '2.9.0.1', '2.9.3', '2.10.4', '2.11.1', 'current'] %>
<% var selectedVersion = settings.version || 'current'; %>
<!doctype html>
<html>
  <head>
    <title>Scaladoc Answer Generator Settings</title>
  </head>
  <body>
    <form class="form-horizontal" role="form">
      <div class="form-group">
        <label for="version_input" class="col-xs-2 control-label">Scala Version</label>

        <div class="col-xs-2">
          <select id="version_input" name="version" class="form-control">
            <% for (var i = 0; i < versions.length; i++) { %>
                <option
                <% if (selectedVersion === versions[i]) { %>
                     selected="selected"
                <% } %>
                >
                <%= versions[i] %>
                </option>
            <% } %>
          </select>
        </div>
      </div>
      <div class="form-group">
        <div class="col-xs-offset-2 col-xs-2">
          <button type="submit" class="btn btn-primary">
            <i class="fa fa-check"></i>&nbsp;Save
          </button>
        </div>
      </div>
    </form>
  </body>
</html>
