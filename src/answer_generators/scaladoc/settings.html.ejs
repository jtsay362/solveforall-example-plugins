<% var versions =  ['2.5.1', '2.6.1', '2.7.7', '2.8.2', '2.9.0.1', '2.9.3', '2.10.4', '2.11.1', 'current'] %>
<% var selectedVersion = settings.version || 'current'; %>
<!doctype html>
<html>
  <head>
    <title>Scaladoc Answer Generator Settings</title>
  </head>
  <body>
    <form class="form-horizontal" >
      <div class="control-group">
        <label for="version_input" class="control-label">Scala Version</label>

        <div class="controls">
          <select id="version_input" name="version">
            <% for (var i = 0; i < versions.length; i++) { %>
                <option
                <% if (selectedVersion === versions[i]) { %>
                     selected="selected"
                <% } %>
                >
                <%= versions[i] %>
                </option>
            <% } %>
          </select>
        </div>
      </div>
      <div class="control-group">
        <div class="controls">
          <button type="submit" class="btn btn-primary">Save</button>
          <button type="button" class="btn">Cancel</button>
        </div>
      </div>
    </form>
  </body>
</html>
